{
  "manifest_version": 3,
  "name": "AI Usage Insights",
  "version": "1.0",
  "description": "Track your AI usage and environmental impact. Mindful AI, better results.",
  "permissions": [
    "storage",
    "webRequest",
    "notifications"
  ],
  "host_permissions": [
    "*://api.openai.com/*",
    "*://api.anthropic.com/*",
    "*://generativelanguage.googleapis.com/*",
    "*://*.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://bard.google.com/*",
    "*://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
